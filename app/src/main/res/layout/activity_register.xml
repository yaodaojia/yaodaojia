<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yaodaojia.yaodaojia.control.activity.register.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF4F1F1"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/bt_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_register_phone"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="phone"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="请输入手机号"

            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColorHint="#FFC2C2C2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="14dp"
            android:background="@mipmap/yanzhengma"
            android:button="@null"
            android:text="获取验证码"
            android:textColor="#ff4200" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFB4B4B4"></View>

    <EditText
        android:id="@+id/et_code"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="请输入验证码"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textColorHint="#FFC2C2C2"
        android:textSize="16sp"
        android:inputType="number"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFB4B4B4"></View>

    <EditText
        android:id="@+id/et_password"
        android:singleLine="true"
        android:password="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="请输入密码"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textColorHint="#FFC2C2C2"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFB4B4B4"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/cb_xianyi"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意" />

        <TextView
            android:id="@+id/tv_xianyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  药到家用户协议"
            android:textColor="#ff4200" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@mipmap/loginanniu"
        android:text="注册"
        android:textColor="#FFF7F6F6"
        android:textSize="18sp" />

</LinearLayout>
