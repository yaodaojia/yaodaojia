<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dip">
    <Button
        android:id="@+id/btn_to_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_photo_gallery_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="支付宝"
        android:textColor="#2c8ada"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DAD9DB" />
    <Button
        android:id="@+id/btn_to_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_photo_gallery_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="微信"
        android:textColor="#2c8ada"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DAD9DB" />

    <Button
        android:id="@+id/btn_to_yue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_photo_camera_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="余额"
        android:textColor="#2c8ada"
        android:textSize="16sp"
        android:onClick="zhifubaoplay"/>

    <Button
        android:id="@+id/btn_to_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/sp_photo_cancel_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="取消"
        android:textColor="#2c8ada"
        android:textSize="16sp" />
</LinearLayout>
