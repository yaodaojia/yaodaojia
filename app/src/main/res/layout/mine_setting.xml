<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2">

        <ImageView
            android:id="@+id/mine_setting_cancel"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/home_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="个人资料"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="15dp"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/mine_setting_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_balance_right"
            android:layout_margin="8dp"
            />
        <ImageView
            android:id="@+id/mine_Setting_img_change"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home_press"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mine_setting_right"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e1e1e1"/>
    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:id="@+id/mine_setting_name_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_balance_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e1e1e1"/>
    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:id="@+id/mine_setting_pwd_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_balance_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e1e1e1"/>

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:id="@+id/mine_Setting_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_balance_right"/>
    </RelativeLayout>
</LinearLayout>