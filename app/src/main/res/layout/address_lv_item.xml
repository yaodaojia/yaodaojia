<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff">
<ImageView
    android:id="@+id/address_iv_head"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:src="@mipmap/dadou"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/address_tv_name"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乔鹏宏"/>
            <TextView
                android:id="@+id/address_tv_phone"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18910766544"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/address_tv"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#FFC2C2C2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区8号延静里中街"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FFB4B4B4"></View>
    </LinearLayout>

</LinearLayout>
