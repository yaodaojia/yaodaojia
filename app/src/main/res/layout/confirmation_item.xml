<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/shopcart_confir_goods_img"
        android:layout_margin="5dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:src="@mipmap/shop_hg" />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopcart_confir_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="葡立 盐酸氨基葡萄糖胶囊" />

        <TextView
            android:id="@+id/shopcart_confir_goods_gongxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="功效：有助于缓解关节疼痛，增加关节灵活性"
            android:textColor="#FFCACACE"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/shopcart_confir_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="￥185.00"
                android:textColor="#FE5F27" />

            <TextView
                android:id="@+id/shopcart_confir_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X1" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
