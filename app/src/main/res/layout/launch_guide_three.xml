<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
    android:id="@+id/launch_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/launch_three_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/launch_three_up" />

    <RelativeLayout
        android:id="@+id/launch_three_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/launch_three_down">

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/launch_three_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/launch_three_btn"
            android:src="@mipmap/launch_three_text" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
